@model DomainModelBurger.Menu
@inject WebBurger.Services.MenuService Menu

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Menu</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input type="number" asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StockPiled" class="control-label"></label>
                <input asp-for="StockPiled" class="form-control" />
                <span asp-validation-for="StockPiled" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="BurgerProductId" class="control-label"></label>
                <select asp-for="BurgerProductId" class="form-control"
                        asp-items="@(new SelectList(Menu.GetBurgersAsync(), "Key", "Value"))">
                    <option>Please select one</option>
                </select>
                <span asp-validation-for="BurgerProductId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="BeverageProductId" class="control-label"></label>
                <select asp-for="BeverageProductId" class="form-control"
                        asp-items="@(new SelectList(Menu.GetBeveragesAsync(), "Key", "Value"))">
                    <option>Please select one</option>
                </select>
                <span asp-validation-for="BeverageProductId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SideProductId" class="control-label"></label>
                <select asp-for="SideProductId" class="form-control"
                        asp-items="@(new SelectList(Menu.GetSidesAsync(), "Key", "Value"))">
                    <option>Please select one</option>
                </select>
                <span asp-validation-for="SideProductId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DessertProductId" class="control-label"></label>
                <select asp-for="DessertProductId" class="form-control"
                        asp-items="@(new SelectList(Menu.GetDessertsAsync(), "Key", "Value"))">
                    <option value="">Please select one</option>
                </select>
                <span asp-validation-for="DessertProductId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}